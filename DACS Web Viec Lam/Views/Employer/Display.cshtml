@model DACS_Web_Viec_Lam.Models.JobViewModel

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/head_foot.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Thông Tin Công Việc</title>
    <link href="~/css/Displaystyle.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1>Thông Tin Công Việc</h1>

        <div class="details">
            <div class="form-group">
                <label>Ngành:</label>
                <span>@Html.DisplayFor(model => model.Title)</span>
            </div>
            <div class="form-group">
                <label>Mô tả công việc:</label>
                <span>@Html.DisplayFor(model => model.Description)</span>
            </div>
            <div class="form-group">
                <label>Khu vực:</label>
                <span>@Html.DisplayFor(model => model.Location)</span>
            </div>
            <div class="form-group">
                <label>Lương:</label>
                <span>@Html.DisplayFor(model => model.Salary)</span>
            </div>
            <div class="form-group">
                <label>Yêu cầu:</label>
                <span>@Html.DisplayFor(model => model.Requirement)</span>
            </div>
            <div class="form-group">
                <label>Hết hạn:</label>
                <span>@Html.DisplayFor(model => model.ApplicationDeadline)</span>
            </div>
            @* Uncomment if Employer details are needed
            @*<div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Employer.CompanyName):</label>
            <span>@Html.DisplayFor(model => model.Employer.CompanyName)</span>
            </div>*@
        </div>
        <a asp-action="Edit" asp-route-id="@Model?.JobId"><button type="submit" class="btn btn-primary">Sửa</button></a> |
        <a class="btn btn-primary" href="@Url.Action("Add","Apply", new {id = Model.JobId})">Ứng tuyển</a> |
        <a asp-action="Index"><button type="button" class="btn btn-secondary">Quay lại trang chủ</button></a>

    </div>
</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#applyButton').click(function () {
            $('#applyForm').toggle();
        });
    });
</script>
