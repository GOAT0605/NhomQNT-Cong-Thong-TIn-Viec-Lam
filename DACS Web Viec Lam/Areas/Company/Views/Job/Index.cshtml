@model IEnumerable<DACS_Web_Viec_Lam.Models.Job>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Company/Views/Shared/head_foot.cshtml";
}

<h1>Job Listings</h1>

<p>
    <a class="btn btn-primary" asp-action="Add">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Status</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Location)</th>
            <th>@Html.DisplayNameFor(model => model.Salary)</th>
            <th>@Html.DisplayNameFor(model => model.Requirement)</th>
            <th>@Html.DisplayNameFor(model => model.ApplicationDeadline)</th>
            <th>@Html.DisplayNameFor(model => model.Employer)</th>
        
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>  @if (item.IsDetactive)
                    {
                        <span class="badge bg-danger text-white">Deactivated</span>
                    }
                    else
                    {
                        <span class="badge bg-success text-white">Activated</span>
                    } </td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                <td>@Html.DisplayFor(modelItem => item.Requirement)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationDeadline)</td>
                <td>@Html.DisplayFor(modelItem => item.Employer.EmployerId)</td>
            
                <td>
                   

                    <form asp-action="DeactivateProduct" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@item.JobId" />
                        <button class="btn btn-danger btn-sm" type="submit">Deactivate</button>
                    </form>

                    <form asp-action="ReactivateProduct" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@item.JobId" />
                        <button class="btn btn-success btn-sm" type="submit">Activate</button>
                    </form>

                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.JobId">Edit</a>
                    <a class="btn btn-info btn-sm" asp-action="Display" asp-route-id="@item.JobId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.JobId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
