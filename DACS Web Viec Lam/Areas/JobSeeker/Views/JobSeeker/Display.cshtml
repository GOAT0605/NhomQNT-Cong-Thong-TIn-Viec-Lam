@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/JobSeeker/Views/Shared/head_foot.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Thông Tin Người Dùng</title>
    <link href="~/css/Displaystyle.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <h1>Thông Tin Người Dùng</h1>
        <div class="details">
            <div class="form-group">
                <label>Họ tên:</label>
                <span>@Model.FullName</span>
            </div>
            <div class="form-group">
                <label>Email liên hệ:</label>
                <span>@Model.Email</span>
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <span>@Model.PhoneNumber</span>
            </div>
            <div class="form-group">
                <label>Mô tả:</label>
                <span>@Model.Description</span>
            </div>
            <div class="form-group">
                <label>Kinh nghiệm:</label>
                <span>@Model.Experiences</span>
            </div>
            <div class="form-group">
                <label>Học vấn:</label>
                <span>@Model.Educations</span>
            </div>
            <div class="form-group">
                <label>Ảnh đại diện:</label>
                <img src="@Model.ImageUrl" alt="Ảnh đại diện" style="width:200px; height: 100px;">
            </div>
        </div>
        <a asp-action="Edit" asp-route-id="@Model?.JobSeekerId">Sửa</a> 
    </div>
    </div>
</body>
</html>
